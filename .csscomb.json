{
    "exclude": [
        "node_modules/**",
        ".next/**"
    ],
    "always-semicolon": true,
    "block-indent": 4,
    "color-case": "lower",
    "color-shorthand": false,
    "element-case": "lower",
    "leading-zero": true,
    "quotes": "double",
    "space-after-opening-brace": "\n",
    "space-before-opening-brace": 1,
    "space-before-closing-brace": "\n",
    "space-after-colon": 1,
    "space-before-colon": 0,
    "space-after-combinator": 1,
    "space-before-combinator": 1,
    "space-after-selector-delimiter": 1,
    "space-before-selector-delimiter": 0,
    "lines-between-rulesets": 1,
    "sort-order": [
        "position",
        "display",
        "width",
        "min-width",
        "max-width",
        "height",
        "min-height",
        "max-height",
        "top",
        "bottom",
        "left",
        "right",
        "flex-wrap",
        "justify-content",
        "align-items",
        "flex-grow",
        "flex-basis",
        "color",
        "font-family",
        "font-size",
        "font-weight",
        "font-style",
        "text-decoration",
        "text-align",
        "text-overflow",
        "text-transform",
        "white-space",
        "background",
        "background-color",
        "background-image",
        "backdrop-filter",
        "opacity",
        "border",
        "border-top",
        "border-bottom",
        "border-left",
        "border-right",
        "border-width",
        "border-color",
        "border-top-color",
        "border-bottom-color",
        "border-left-color",
        "border-right-color",
        "border-radius",
        "border-top-left-radius",
        "border-top-right-radius",
        "border-bottom-left-radius",
        "border-bottom-right-radius",
        "outline",
        "box-shadow",
        "overflow",
        "overflow-x",
        "overflow-y",
        "padding",
        "padding-top",
        "padding-bottom",
        "padding-left",
        "padding-right",
        "margin",
        "margin-top",
        "margin-bottom",
        "margin-left",
        "margin-right",
        "float",
        "content",
        "transform",
        "cursor",
        "user-select",
        "pointer-events",
        "src",
        "z-index",
        "transition",
        "animation",
        "$include"
    ]
}